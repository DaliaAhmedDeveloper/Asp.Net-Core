@model OnlineStore.Models.Review
@{
    Layout = null; 
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>New Product Review</title>
</head>
<body style="margin:0; padding:0; background:#f4f4f4; font-family:Arial,sans-serif; color:#333;">
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:20px;">
        <table width="600" style="background:#fff; border-radius:8px; overflow:hidden;">
          <tr>
            <td style="background:#28a745; color:#000; padding:20px; text-align:center; font-size:20px; font-weight:bold;">
              ‚≠ê New Product Review
            </td>
          </tr>
          <tr>
            <td style="padding:20px;">
              <p><strong>Product:</strong> @Model.Product.Slug</p>
              <p><strong>User:</strong> @Model.User.FullName</p>
              <p><strong>Rating:</strong> @Model.Rating / 5</p>
              <blockquote style="border-left:4px solid #28a745;padding-left:10px;color:#555;">
                @Model.Comment
              </blockquote>
              <div style="text-align:center; margin:30px 0;">
                <a href="##" style="background:#28a745;color:#000;padding:12px 24px;text-decoration:none;font-size:16px;border-radius:5px;">
                  View Review
                </a>
              </div>
              <p style="font-size:12px;color:#888;text-align:center;margin:0;">You received a new product review.</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
