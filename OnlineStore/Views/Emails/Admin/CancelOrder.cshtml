@model OnlineStore.Models.Order
@{
    Layout = null; 
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Order Cancelled</title>
</head>
<body style="margin:0; padding:0; background:#f4f4f4; font-family:Arial,sans-serif; color:#333;">
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:20px;">
        <table width="600" style="background:#fff; border-radius:8px; overflow:hidden;">
          <tr>
            <td style="background:#dc3545; color:#fff; padding:20px; text-align:center; font-size:20px; font-weight:bold;">
              ‚ùå Order Cancelled
            </td>
          </tr>
          <tr>
            <td style="padding:20px;">
              <p style="font-size:15px;">An order has been cancelled.</p>
              <p><strong>Order Number:</strong> @Model.ReferenceNumber</p>
              <p><strong>User:</strong> @Model.User.FullName</p>
              <div style="text-align:center; margin:30px 0;">
                <a href="#" style="background:#dc3545;color:#fff;padding:12px 24px;text-decoration:none;font-size:16px;border-radius:5px;">
                  View Order
                </a>
              </div>
              <p style="font-size:12px;color:#888;text-align:center;margin:0;">This is an automated notification for admins.</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
