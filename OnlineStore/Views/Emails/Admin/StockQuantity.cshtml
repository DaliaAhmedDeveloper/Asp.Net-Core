@model OnlineStore.Models.Stock
@{
    Layout = null; 
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>Stock Alert</title>
</head>
<body style="margin:0; padding:0; background:#f4f4f4; font-family:Arial,sans-serif; color:#333;">
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:20px;">
        <table width="600" style="background:#fff; border-radius:8px; overflow:hidden;">
          <tr>
            <td style="background:#20c997; color:#fff; padding:20px; text-align:center; font-size:20px; font-weight:bold;">
              ðŸ“¦ Stock Alert
            </td>
          </tr>
          <tr>
            <td style="padding:20px;">
              <p><strong>Product:</strong> @Model.ProductVariant.Product.Slug</p>
              <p><strong>total Stock:</strong> @Model.TotalQuantity</p>
              <p><strong>Available Stock:</strong> @Model.AvailableQuantity</p>
              <p><strong>Attribute:</strong> Color : Red </p>
              <p style="color:#dc3545; font-weight:bold;">This product is running low or out of stock.</p>
              <div style="text-align:center; margin:30px 0;">
                <a href="##" style="background:#20c997;color:#fff;padding:12px 24px;text-decoration:none;font-size:16px;border-radius:5px;">
                  Manage Stock
                </a>
              </div>
              <p style="font-size:12px;color:#888;text-align:center;margin:0;">Stock update notification.</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
