@model OnlineStore.Models.TicketMessage
@{
    Layout = null; 
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>New Ticket Message</title>
</head>
<body style="margin:0; padding:0; background:#f4f4f4; font-family:Arial,sans-serif; color:#333;">
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:20px;">
        <table width="600" style="background:#fff; border-radius:8px; overflow:hidden;">
          <tr>
            <td style="background:#28a745; color:#fff; padding:20px; text-align:center; font-size:20px; font-weight:bold;">
              ðŸ’¬ New Ticket Message
            </td>
          </tr>
          <tr>
            <td style="padding:20px;">
              <p> You received a new message on a ticket with number : </p>
              <p><strong>Ticket Number:</strong> @Model.Ticket?.TicketNumber</p>
              <p><strong>User:</strong> @Model.User?.FullName</p>
              <blockquote style="border-left:4px solid #28a745;padding-left:10px;color:#555;">
                @Model.Message
              </blockquote>
              <div style="text-align:center; margin:30px 0;">
                <a href="##" style="background:#28a745;color:#fff;padding:12px 24px;text-decoration:none;font-size:16px;border-radius:5px;">
                  Reply to Ticket
                </a>
              </div>
              <p style="font-size:12px;color:#888;text-align:center;margin:0;">A new message was added to this support ticket.</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
