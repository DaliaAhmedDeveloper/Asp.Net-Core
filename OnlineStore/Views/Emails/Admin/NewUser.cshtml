@model OnlineStore.Models.ViewModels.NewUserEmailViewModel
@{
    Layout = null; 
}
<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>New User Registered</title>
</head>
<body style="margin:0; padding:0; background:#f4f4f4; font-family:Arial,sans-serif; color:#333;">
  <table role="presentation" width="100%">
    <tr>
      <td align="center" style="padding:20px;">
        <table width="600" style="background:#fff; border-radius:8px; overflow:hidden;">
          <tr>
            <td style="background:#20c997; color:#fff; padding:20px; text-align:center; font-size:20px; font-weight:bold;">
              New User Registered
            </td>
          </tr>
          <tr>
            <td style="padding:20px;">
              <p>A new user has registered on the platform.</p>
              <p><strong>Name:</strong> @Model.User.FullName</p>
              <p><strong>Email:</strong> @Model.User.Email</p>
              <div style="text-align:center; margin:30px 0;">
                <a href="@Model.Url" style="background:#20c997;color:#fff;padding:12px 24px;text-decoration:none;font-size:16px;border-radius:5px;">
                  View User
                </a>
              </div>
              <p style="font-size:12px;color:#888;text-align:center;margin:0;">New user account created.</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>
  </table>
</body>
</html>
