@model OnlineStore.Models.ViewModels.DashboardViewModel



<!--begin::App Content Header-->
<div class="app-content-header">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">@Localizer["Dashboard"]</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer["Dashboard"]</li>
                </ol>
            </div>
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
    <!--begin::Container-->
    <div class="container-fluid">
        <!--begin::Row-->
        <div class="row">
            <!--begin::Col-->
            <div class="col-lg-3 col-6">
                <!--begin::Small Box Widget 1-->
                <div class="small-box text-bg-primary">
                    <div class="inner">
                        <h3>@Model.OrderCountCurrentMonth</h3>
                        <p class="m-0">@Localizer["NewOrdersThisMonth"] </p>
                        <span>@Localizer["TotalOrders"] : @Model.OrderCount</span>
                    </div>
                    <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path
                            d="M2.25 2.25a.75.75 0 000 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 00-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 000-1.5H5.378A2.25 2.25 0 017.5 15h11.218a.75.75 0 00.674-.421 60.358 60.358 0 002.96-7.228.75.75 0 00-.525-.965A60.864 60.864 0 005.68 4.509l-.232-.867A1.875 1.875 0 003.636 2.25H2.25zM3.75 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM16.5 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z">
                        </path>
                    </svg>
                    <a asp-controller="Order" asp-action="Index"
                        class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
                        @Localizer["MoreInfo"] <i class="bi bi-link-45deg"></i>
                    </a>
                </div>
                <!--end::Small Box Widget 1-->
            </div>
            <!--end::Col-->
            <div class="col-lg-3 col-6">
                <!--begin::Small Box Widget 2-->
                <div class="small-box text-bg-success">
                    <div class="inner">
                        <h3>@Model.CouponCount</h3>
                        <p class="mt-3 mb-3">@Localizer["Coupons"]</p>
                    </div>
                    <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path
                            d="M18.375 2.25c-1.035 0-1.875.84-1.875 1.875v15.75c0 1.035.84 1.875 1.875 1.875h.75c1.035 0 1.875-.84 1.875-1.875V4.125c0-1.036-.84-1.875-1.875-1.875h-.75zM9.75 8.625c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-.75a1.875 1.875 0 01-1.875-1.875V8.625zM3 13.125c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v6.75c0 1.035-.84 1.875-1.875 1.875h-.75A1.875 1.875 0 013 19.875v-6.75z">
                        </path>
                    </svg>
                    <a asp-controller="Coupon" asp-action="Index"
                        class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
                       @Localizer["MoreInfo"] <i class="bi bi-link-45deg"></i>
                    </a>
                </div>
                <!--end::Small Box Widget 2-->
            </div>
            <!--end::Col-->
            <div class="col-lg-3 col-6">
                <!--begin::Small Box Widget 3-->
                <div class="small-box text-bg-warning">
                    <div class="inner">
                        <h3>@Model.UserCountCurrentMonth</h3>
                        <p class="m-0">@Localizer["UserRegistrationsThisMonth"]</p>
                        <span>@Localizer["TotalUsers"] : @Model.UserCount</span>
                    </div>
                    <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path
                            d="M6.25 6.375a4.125 4.125 0 118.25 0 4.125 4.125 0 01-8.25 0zM3.25 19.125a7.125 7.125 0 0114.25 0v.003l-.001.119a.75.75 0 01-.363.63 13.067 13.067 0 01-6.761 1.873c-2.472 0-4.786-.684-6.76-1.873a.75.75 0 01-.364-.63l-.001-.122zM19.75 7.5a.75.75 0 00-1.5 0v2.25H16a.75.75 0 000 1.5h2.25v2.25a.75.75 0 001.5 0v-2.25H22a.75.75 0 000-1.5h-2.25V7.5z">
                        </path>
                    </svg>
                    <a asp-controller="User" asp-action="Index"
                        class="small-box-footer link-dark link-underline-opacity-0 link-underline-opacity-50-hover">
                       @Localizer["MoreInfo"] <i class="bi bi-link-45deg"></i>
                    </a>
                </div>
                <!--end::Small Box Widget 3-->
            </div>
            <!--end::Col-->
            <div class="col-lg-3 col-6">
                <!--begin::Small Box Widget 4-->
                <div class="small-box text-bg-danger">
                    <div class="inner">
                        <h3>65</h3>
                        <p>@Localizer["UniqueVisitors"]</p>
                    </div>
                    <svg class="small-box-icon" fill="currentColor" viewBox="0 0 24 24"
                        xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                        <path clip-rule="evenodd" fill-rule="evenodd"
                            d="M2.25 13.5a8.25 8.25 0 018.25-8.25.75.75 0 01.75.75v6.75H18a.75.75 0 01.75.75 8.25 8.25 0 01-16.5 0z">
                        </path>
                        <path clip-rule="evenodd" fill-rule="evenodd"
                            d="M12.75 3a.75.75 0 01.75-.75 8.25 8.25 0 018.25 8.25.75.75 0 01-.75.75h-7.5a.75.75 0 01-.75-.75V3z">
                        </path>
                    </svg>
                    <a href="#"
                        class="small-box-footer link-light link-underline-opacity-0 link-underline-opacity-50-hover">
                        @Localizer["MoreInfo"] <i class="bi bi-link-45deg"></i>
                    </a>
                </div>
                <!--end::Small Box Widget 4-->
            </div>
            <!--end::Col-->
        </div>
        <!--end::Row-->
        <!--begin::Row-->
        <div class="row">
            <!-- Start col -->
            <div class="col-md-8">
                <!--begin::Row-->
                <div class="row g-4 mb-4">
                    <!-- /.col -->
                    <div class="col-md-6">
                        <!-- USERS LIST -->
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">@Localizer["LatestMembers"]</h3>
                                <div class="card-tools">
                                    <span class="badge text-bg-danger"> @Model.LatestUsers.Count() @Localizer["NewMembers"]</span>
                                    <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                                        <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                        <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                                    </button>
                                    <button type="button" class="btn btn-tool" data-lte-toggle="card-remove">
                                        <i class="bi bi-x-lg"></i>
                                    </button>
                                </div>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body p-0">
                                <div class="row text-center m-1">
                                    @foreach(var user in Model.LatestUsers){
                                    <div class="col-3 p-2">
                                        <img class="img-fluid rounded-circle" src="~/dashboard/img/default-user.jpg"
                                            alt="User Image" />
                                        <a class="btn fw-bold fs-7 text-secondary text-truncate w-100 p-0" href="#">
                                           @user.FullName
                                        </a>
                                        <div class="fs-8">@user.Email</div>
                                    </div>
                                    }
                                </div>
                                <!-- /.users-list -->
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer text-center">
                                <a asp-controller="User" asp-action="Index"
                                    class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">
                                    @Localizer["ViewAllUsers"]
                                </a>
                            </div>
                            <!-- /.card-footer -->
                        </div>
                        <!-- /.card -->
                    </div>
                    <!-- /.col -->

                    <div class="col-md-6">
                        <!-- Info Boxes Style 2 -->
                        <div class="info-box mb-3 text-bg-warning">
                            <span class="info-box-icon"> <i class="bi bi-tag-fill"></i> </span>
                            <div class="info-box-content">
                                <span class="info-box-text">@Localizer["TotalIncome"]</span>
                                <span class="info-box-number">@Model.OrderTotalIncome</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- /.info-box -->
                        <div class="info-box mb-3 text-bg-success">
                            <span class="info-box-icon"> <i class="bi bi-heart-fill"></i> </span>
                            <div class="info-box-content">
                                <span class="info-box-text">@Localizer["TotalIncomeThisMonth"]</span>
                                <span class="info-box-number">@Model.OrderIncomeCurrentMonth</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                        <!-- Info Boxes Style 2 -->
                        <div class="info-box mb-3 text-bg-warning">
                            <span class="info-box-icon"> <i class="bi bi-tag-fill"></i> </span>
                            <div class="info-box-content">
                                <span class="info-box-text">@Localizer["Returns"]</span>
                                <span class="info-box-number">@Model.ReturnCount</span>
                            </div>
                            <!-- /.info-box-content -->
                        </div>
                    </div>
                </div>
                <!--end::Row-->
                <!--begin::Latest Order Widget-->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Localizer["LatestOrders"]</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                                <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table m-0">
                                <thead>
                                    <tr>
                                        <th>@Localizer["OrderNumber"]</th>
                                        <th>@Localizer["PaymentMethod"]</th>
                                        <th>@Localizer["Status"]</th>
                                        <th>@Localizer["FinalAmount"]</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach(var order in Model.LatestOrders){
                                    <tr>
                                        <td>
                                            <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id"
                                                class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">@order.ReferenceNumber</a>
                                        </td>
                                        <td>@order.PaymentMethod</td>
                                        <td><span class="badge text-bg-success"> @order.OrderStatus </span></td>
                                        <td>
                                            @order.FinalAmount
                                        </td>
                                    </tr>
                                    }
                                   
                                </tbody>
                            </table>
                        </div>
                        <!-- /.table-responsive -->
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer clearfix">

                        <a asp-controller="Order" asp-action="Index" class="btn btn-sm btn-secondary float-end">
                           @Localizer["ViewAllOrders"]
                        </a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
            <div class="col-md-4">
                <!-- /.info-box -->
                <div class="info-box mb-3 text-bg-danger">
                    <span class="info-box-icon"> <i class="bi bi-cloud-download"></i> </span>
                    <div class="info-box-content">
                        <span class="info-box-text">@Localizer["Warehouses"]</span>
                        <span class="info-box-number">@Model.WarehouseCount</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- /.info-box -->
                <div class="info-box mb-3 text-bg-info">
                    <span class="info-box-icon"> <i class="bi bi-chat-fill"></i> </span>
                    <div class="info-box-content">
                        <span class="info-box-text">@Localizer["SupportTickets"]</span>
                        <span class="info-box-number">@Model.SupportTicketsCount</span>
                    </div>
                    <!-- /.info-box-content -->
                </div>
                <!-- PRODUCT LIST -->
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@Localizer["RecentlyAddedProducts"]</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-collapse">
                                <i data-lte-icon="expand" class="bi bi-plus-lg"></i>
                                <i data-lte-icon="collapse" class="bi bi-dash-lg"></i>
                            </button>
                            <button type="button" class="btn btn-tool" data-lte-toggle="card-remove">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body p-0">
                        <div class="px-2">
                            @foreach(var product in Model.LatestProducts){
                            <div class="d-flex border-top py-2 px-1">
                                <div class="col-2">
                                    <img src="@product.ImageUrl" alt="Product Image"
                                        class="img-size-50" />
                                </div>
                                <div class="col-10">
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="fw-bold">
                                       @product.Slug
                                        <span class="badge text-bg-warning float-end"> @product.Price @(product.SalePrice > 0 ? "Become" + @product.SalePrice :"") </span>
                                    </a>
                                    <div class="text-truncate">@Localizer["TotalStock"] : @product.ProductVariants.Sum(pv => pv.Stock?.TotalQuantity ?? 0) </div>
                                </div>
                            </div>
                            }
                            <!-- /.item -->
                            
                        </div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer text-center">
                        <a asp-controller="Product" asp-action="Index" class="uppercase"> @Localizer["ViewAllProducts"] </a>
                    </div>
                    <!-- /.card-footer -->
                </div>
                <!-- /.card -->
            </div>
            <!-- /.col -->
        </div>
        <!--end::Row-->
    </div>
    <!--end::Container-->
</div>
<!--end::App Content-->