@model OnlineStore.Models.ViewModels.CategoryViewModel

@using System.Globalization

@{
  var lang = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
  ViewData["Title"] = @Localizer["PageTitle"];
}
<div class="app-content-header">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6">
        <h3 class="mb-0">@ViewData["Title"]</h3>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a asp-area="Dashboard" asp-controller="Category" asp-action="Index">@Localizer["Categories"]</a></li>
          <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<div class="app-content">
  <div class="container-fluid">
    <div class="card card-primary card-outline mb-4">
      <form asp-area="Dashboard" asp-controller="Category" asp-action="Edit" asp-route-id="@Model.Id" method="POST"
        enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="card-body">
          <div class="row g-3">

            <!-- Slug -->
            <div class="col-md-6">
              <label asp-for="Slug" class="form-label"></label>
              <input asp-for="Slug" class="form-control" />
              <span asp-validation-for="Slug" class="text-danger"></span>
            </div>

            <!-- Parent Category -->
            <div class="col-md-6">
              <label asp-for="ParentId" class="form-label">@Localizer["ParentCategory"]</label>
              <select asp-for="ParentId" class="form-select"
                asp-items="@(new SelectList(ViewBag.Parents, "Id", "Slug"))">
                <option value="">@Localizer["SelectParent"]</option>
              </select>
              <span asp-validation-for="ParentId" class="text-danger"></span>
            </div>

            <!-- Name En -->
            <div class="col-md-6">
              <label asp-for="NameEn" class="form-label"></label>
              <input asp-for="NameEn" class="form-control" />
              <span asp-validation-for="NameEn" class="text-danger"></span>
            </div>

            <!-- Name Ar -->
            <div class="col-md-6">
              <label asp-for="NameAr" class="form-label"></label>
              <input asp-for="NameAr" class="form-control" />
              <span asp-validation-for="NameAr" class="text-danger"></span>
            </div>

            <!-- Description En -->
            <div class="col-md-6">
              <label asp-for="DescriptionEn" class="form-label"></label>
              <textarea asp-for="DescriptionEn" class="form-control"></textarea>
              <span asp-validation-for="DescriptionEn" class="text-danger"></span>
            </div>

            <!-- Description Ar -->
            <div class="col-md-6">
              <label asp-for="DescriptionAr" class="form-label"></label>
              <textarea asp-for="DescriptionAr" class="form-control"></textarea>
              <span asp-validation-for="DescriptionAr" class="text-danger"></span>
            </div>

            <!-- Image -->
            <div class="col-md-6">
              <label asp-for="ImageFile" class="form-label">@Localizer["CategoryImage"]</label>
              <input asp-for="ImageFile" type="file" class="form-control" />
              <span asp-validation-for="ImageFile" class="text-danger"></span>
              <!-- Preview existing image -->
              @if (!string.IsNullOrEmpty(Model.ImageUrl))
              {
                <div class="mt-2">
                  <img src="@Model.ImageUrl" alt="Product Image" class="img-thumbnail" width="150" />
                </div>
              }
            </div>

            <!-- Is Deal -->
            <div class="col-md-6">
              <div class="form-check">
                <input asp-for="IsDeal" class="form-check-input" />
                <label asp-for="IsDeal" class="form-check-label">@Localizer["IsDeal"]</label>
              </div>
            </div>

          </div>

          <button type="submit" class="btn btn-success mt-3">@Localizer["Submit"]</button>
        </div>
      </form>
    </div>
  </div>
</div>

@section Scripts {
  <partial name="_ValidationScriptsPartial" />
}
