@model OnlineStore.Models.ViewModels.RoleFormViewModel
@{
    ViewData["Title"] = Localizer["AddNewRole"];
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a asp-area="Dashboard" asp-controller="Role" asp-action="Index">@Localizer["Roles"]</a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <form asp-area="Dashboard" asp-controller="Role" asp-action="Create" method="POST" enctype="multipart/form-data">
                @Html.AntiForgeryToken()
                <div class="card-body">
                    <div class="row g-3">

                        <!-- Name En -->
                        <div class="col-md-6">
                            <label asp-for="NameEn" class="form-label">@Localizer["NameEn"]</label>
                            <input asp-for="NameEn" class="form-control" placeholder="@Localizer["EnterNameEn"]" />
                            <span asp-validation-for="NameEn" class="text-danger"></span>
                        </div>

                        <!-- Name Ar -->
                        <div class="col-md-6">
                            <label asp-for="NameAr" class="form-label">@Localizer["NameAr"]</label>
                            <input asp-for="NameAr" class="form-control" placeholder="@Localizer["EnterNameAr"]" />
                            <span asp-validation-for="NameAr" class="text-danger"></span>
                        </div>

                        <!-- Description En -->
                        <div class="col-md-6">
                            <label asp-for="DescriptionEn" class="form-label">@Localizer["DescriptionEn"]</label>
                            <textarea asp-for="DescriptionEn" class="form-control" placeholder="@Localizer["EnterDescriptionEn"]"></textarea>
                            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                        </div>

                        <!-- Description Ar -->
                        <div class="col-md-6">
                            <label asp-for="DescriptionAr" class="form-label">@Localizer["DescriptionAr"]</label>
                            <textarea asp-for="DescriptionAr" class="form-control" placeholder="@Localizer["EnterDescriptionAr"]"></textarea>
                            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                        </div>

                        <!-- Slug -->
                        <div class="col-md-6">
                            <label asp-for="Slug" class="form-label">@Localizer["Slug"]</label>
                            <input asp-for="Slug" class="form-control" placeholder="@Localizer["EnterSlug"]" />
                            <span asp-validation-for="Slug" class="text-danger"></span>
                        </div>

                        <!-- Permissions -->
                        <div class="col-12">
                            <h6>@Localizer["Permissions"]</h6>
                        </div>
                        @foreach (var permission in ViewBag.permissions)
                        {
                            <div class="col-lg-3 col-md-4">
                                <input type="checkbox" id="permission_@permission.Id" name="SelectedPermissions" value="@permission.Id">
                                <label class="form-label" for="permission_@permission.Id">@permission.Name</label>
                            </div>
                        }
                        <span asp-validation-for="SelectedPermissions" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-success mt-3">@Localizer["Submit"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}