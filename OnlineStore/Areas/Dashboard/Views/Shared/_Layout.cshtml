  <script>
    const connection = new signalR.HubConnectionBuilder()
      .withUrl("/notificationHub" , { withCredentials: true })
      .build();

      connection.start().catch(err => console.error(err));
      connection.on("ReceiveNotification", (notification) => {
      console.log("Pushing Notification Strat");
      // Play bell sound
    // $("#notificationSound").play();

      // Show popup
      const toast= $("#PopUpNoti");
      const title = $("#PopUpNotiTitle");
      const message = $("#PopUpNotiMessage");
      const Ncount = $("#NotificationCount");
      let count = parseInt(Ncount.attr("data-count")) || 0; 
      count += 1;
      
      title.text(notification.title);
      message.text(notification.message);
      Ncount.attr("data-count", count);
      Ncount.text(count);    

      toast.toast('show');
      const audio = $("#notificationSound")[0];
      audio.play().catch(err => console.log("Audio blocked:", err));
    });
  </script>

