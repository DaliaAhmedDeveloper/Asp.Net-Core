@model IEnumerable<OnlineStore.Models.AppSetting>
@using System.Globalization
@{
    var lang = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
}

<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">@Localizer["Title"]</h3>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <form asp-area="Dashboard" asp-controller="AppSetting" asp-action="Update" method="POST">
                @Html.AntiForgeryToken()
                <div class="card-body">

                    @foreach (var setting in Model)
                    {
                        var label = setting.Translations.FirstOrDefault(t => t.LanguageCode == lang)?.Key ?? setting.Code;
                        <div class="mb-3 row">
                            <label class="col-sm-3 col-form-label">@label</label>
                            <div class="col-sm-9">
                                <input type="text" name="Settings[@setting.Id]" value="@setting.Value" class="form-control" />
                            </div>
                        </div>
                    }
                    <button type="submit" class="btn btn-success mt-3">@Localizer["SaveButton"]</button>
                </div>
            </form>
        </div>
    </div>
</div>
