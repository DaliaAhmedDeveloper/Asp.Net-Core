@model OnlineStore.Models.ViewModels.PagedResult<Notification>
@using OnlineStore.Models.Enums

@using System.Globalization

@{
    var lang = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
}
<!--begin::App Content Header-->
<div class="app-content-header">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-sm-6">
        <h3 class="mb-0">@Localizer["Notifications"]</h3>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="#">@Localizer["Home"]</a></li>
          <li class="breadcrumb-item active" aria-current="page">@Localizer["Notifications"]</li>
        </ol>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">

      <!-- /.col -->
      <div class="col-12">

        <!-- /.card -->
        <div class="card ">
          <div class="card-header">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
              <h3 class="card-title">@Localizer["ListAllNotifications"]</h3>
              <form asp-controller="Notification" asp-action="Index" method="GET">
                <input class="form-control d-inline-block w-auto " type="text" name="searchTxt"
                  placeholder="@Localizer["SearchText"]">
                <button class="btn btn-success" type="submit">@Localizer["Search"]</button>
              </form>

            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body p-0">
            @if (Model == null || !Model.Items.Any())
            {
              <p class="p-3">No records available.</p>
            }
            else
            {
              <div class="notifications-container p-4">
                @foreach (var notification in Model.Items)
                {
                  var type = notification.Type;
                  string alertClass = type switch
                  {
                      NotificationType.Info => "alert-info",
                      NotificationType.Warning => "alert-warning",
                      NotificationType.Error => "alert-danger",
                      _ => "alert-secondary"
                  };
                  <div
                    class="alert @alertClass alert-dismissible fade show d-flex justify-content-between align-items-center"
                    role="alert">
                    <a href="@notification.Url" class="d-block text-dark text-decoration-none">
                      <strong>@notification.Type:</strong>
                      @notification.Translations.FirstOrDefault(t => t.LanguageCode == lang)?.Title
                      <br />
                      <small>@notification.Translations.FirstOrDefault(t => t.LanguageCode == lang)?.Message</small>
                    </a>

                    <form asp-action="Delete" asp-route-id="@notification.Id" method="post" class="m-0 p-0">
                      <button type="submit" class="btn btn-sm btn-transparent p-0"
                        onclick="return confirm('Are you sure you want to delete this notification?');">
                        <i class="bi bi-x-lg"></i>
                      </button>
                    </form>
                  </div>
                }
              </div>

              @if (Model?.TotalPages > 1)
              {
                <nav class="card-header">
                  <ul class="pagination">
                    @for (int i = 1; i <= Model?.TotalPages; i++)
                    {
                      <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                      </li>
                    }
                  </ul>
                </nav>
              }
            }
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
<!--end::App Content-->