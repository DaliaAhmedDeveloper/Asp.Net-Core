@model IEnumerable<OnlineStore.Models.ProductVariant>

@using System.Globalization

@{
    var lang = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
}
<!--begin::App Content Header-->
<div class="app-content-header">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">
      <div class="col-sm-6">
        <h3 class="mb-0">Product Variants Of @ViewBag.product.Slug</h3>
      </div>
      <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">Product Variants Of @ViewBag.product.Slug</li>
        </ol>
      </div>
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
<!--end::App Content Header-->
<!--begin::App Content-->
<div class="app-content">
  <!--begin::Container-->
  <div class="container-fluid">
    <!--begin::Row-->
    <div class="row">

      <!-- /.col -->
      <div class="col-12">

        <!-- /.card -->
        <div class="card ">
          <div class="card-header">
            <div class="d-flex flex-wrap justify-content-between align-items-center">
              <h3 class="card-title">List All Variants Of @ViewBag.product.Slug</h3>
              <a asp-area="Dashboard" asp-controller="ProductVariant" asp-action="Create" asp-route-productId="@ViewBag.product.Id" class="btn btn-success">Add New
                ProductVariant</a>
            </div>
          </div>
          <!-- /.card-header -->
          <div class="card-body p-0">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th style="width: 10px">No</th>
                  <th>Image</th>
                  <th>Product</th>
                  <th>Attribute</th>
                  <th>Value</th>
                  <th style="width: 40px">Actions</th>
                </tr>
              </thead>
              <tbody>
               
                @if (Model == null || !Model.Any())
                {
                  <p class="p-4">No records available.</p>
                }
                else
                {
                  foreach (var ProductVariant in Model)
                  {
                    <tr class="align-middle">
                      <td>
                       @ProductVariant.Id
                      </td>
                      <td><img width="50" src="@ProductVariant.ImageUrl" alt=""></td>
                      <td>@ViewBag.product.Slug</td>
                      <td>@ProductVariant.VariantAttributeValues.FirstOrDefault()?.Attribute.Code</td>
                       <td>@ProductVariant.VariantAttributeValues.FirstOrDefault()?.AttributeValue.Code</td>
                      <td>
                        <div class="btn-group">
                          <!-- Show -->
                          <a asp-action="Details" asp-route-id="@ProductVariant.Id" class="btn m-1 rounded btn-info btn-sm"
                            title="View">
                            <i class="bi bi-eye-fill"></i>
                          </a>
                          <!-- Edit -->
                          <a asp-action="Edit" asp-route-id="@ProductVariant.Id" class="btn m-1 rounded btn-warning btn-sm"
                            title="Edit">
                            <i class="bi bi-pencil-square"></i>
                          </a>

                          <!-- Hide -->
                          <a asp-action="Hide" asp-route-id="@ProductVariant.Id" class="btn m-1 hide-row rounded btn-secondary btn-sm"
                            title="Hide">
                            <i class="bi bi-eye-slash-fill"></i>
                          </a>

                          <!-- Delete -->
                          <form asp-action="Delete" asp-route-id="@ProductVariant.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-danger rounded m-1 btn-sm" title="Delete"
                              onclick="return confirm('Are you sure you want to delete this item?');">
                              <i class="bi bi-trash-fill"></i>
                            </button>
                          </form>
                        </div>
                      </td>

                    </tr>
                  }
                }
              </tbody>
            </table>
          </div>
          <!-- /.card-body -->
        </div>
        <!-- /.card -->
      </div>
      <!-- /.col -->
    </div>
    <!--end::Row-->
  </div>
  <!--end::Container-->
</div>
<!--end::App Content-->