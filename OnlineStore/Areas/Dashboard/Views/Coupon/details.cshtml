@model OnlineStore.Models.ViewModels.CouponViewModel
@{
    ViewData["Title"] = Localizer["CouponDetails"];
}
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">@ViewData["Title"]</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item">
                        <a asp-area="Dashboard" asp-controller="Coupon" asp-action="Index">
                            @Localizer["Coupons"]
                        </a>
                    </li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="app-content">
    <div class="container-fluid">
        <div class="card card-primary card-outline mb-4">
            <form asp-area="Dashboard" asp-controller="Coupon" asp-action="Edit" method="POST">
                @Html.AntiForgeryToken()
                <input  readonly type="hidden" asp-for="Id" />
                <div class="card-body">
                    <div class="row g-3">

                        <!-- Discount Type -->
                        <div class="col-md-6">
                            <label asp-for="DiscountType" class="form-label">@Localizer["DiscountType"]</label>
                            <select disabled  asp-for="DiscountType" class="form-select">
                                <option value="0">@Localizer["Fixed"]</option>
                                <option value="1">@Localizer["Percentage"]</option>
                            </select>
                            <span asp-validation-for="DiscountType" class="text-danger"></span>
                        </div>

                        <!-- Discount Value -->
                        <div class="col-md-6">
                            <label asp-for="DiscountValue" class="form-label">@Localizer["DiscountValue"]</label>
                            <input  readonly asp-for="DiscountValue" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="DiscountValue" class="text-danger"></span>
                        </div>

                        <!-- Discount Percentage -->
                        <div class="col-md-6">
                            <label asp-for="DiscountPrecentage" class="form-label">@Localizer["DiscountPercentage"]</label>
                            <input  readonly asp-for="DiscountPrecentage" type="number" class="form-control" />
                            <span asp-validation-for="DiscountPrecentage" class="text-danger"></span>
                        </div>

                        <!-- Start Date -->
                        <div class="col-md-6">
                            <label asp-for="StartDate" class="form-label">@Localizer["StartDate"]</label>
                            <input  readonly asp-for="StartDate" type="date" class="form-control" />
                            <span asp-validation-for="StartDate" class="text-danger"></span>
                        </div>

                        <!-- End Date -->
                        <div class="col-md-6">
                            <label asp-for="EndDate" class="form-label">@Localizer["EndDate"]</label>
                            <input  readonly asp-for="EndDate" type="date" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>

                        <!-- Max Usage Per User -->
                        <div class="col-md-6">
                            <label asp-for="MaxUsagePerUser" class="form-label">@Localizer["MaxUsagePerUser"]</label>
                            <input  readonly asp-for="MaxUsagePerUser" type="number" class="form-control" />
                            <span asp-validation-for="MaxUsagePerUser" class="text-danger"></span>
                        </div>

                        <!-- Max Discount Amount -->
                        <div class="col-md-6">
                            <label asp-for="MaxDiscountAmount" class="form-label">@Localizer["MaxDiscountAmount"]</label>
                            <input  readonly asp-for="MaxDiscountAmount" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="MaxDiscountAmount" class="text-danger"></span>
                        </div>

                        <!-- Minimum Order Amount -->
                        <div class="col-md-6">
                            <label asp-for="MinimumOrderAmount" class="form-label">@Localizer["MinimumOrderAmount"]</label>
                            <input  readonly asp-for="MinimumOrderAmount" type="number" step="0.01" class="form-control" />
                            <span asp-validation-for="MinimumOrderAmount" class="text-danger"></span>
                        </div>

                        <!-- Description En -->
                        <div class="col-md-6">
                            <label asp-for="DescriptionEn" class="form-label">@Localizer["DescriptionEn"]</label>
                            <textarea asp-for="DescriptionEn" class="form-control"></textarea>
                            <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                        </div>

                        <!-- Description Ar -->
                        <div class="col-md-6">
                            <label asp-for="DescriptionAr" class="form-label">@Localizer["DescriptionAr"]</label>
                            <textarea asp-for="DescriptionAr" class="form-control"></textarea>
                            <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                        </div>

                        <!-- Terms And Conditions En -->
                        <div class="col-md-6">
                            <label asp-for="TermsAndConditionsEn" class="form-label">@Localizer["TermsAndConditionsEn"]</label>
                            <textarea asp-for="TermsAndConditionsEn" class="form-control"></textarea>
                            <span asp-validation-for="TermsAndConditionsEn" class="text-danger"></span>
                        </div>

                        <!-- Terms And Conditions Ar -->
                        <div class="col-md-6">
                            <label asp-for="TermsAndConditionsAr" class="form-label">@Localizer["TermsAndConditionsAr"]</label>
                            <textarea asp-for="TermsAndConditionsAr" class="form-control"></textarea>
                            <span asp-validation-for="TermsAndConditionsAr" class="text-danger"></span>
                        </div>

                        <!-- Is Active -->
                        <div class="col-md-6">
                            <div class="form-check">
                                <input  readonly asp-for="IsActive" class="form-check-input" />
                                <label asp-for="IsActive" class="form-check-label">@Localizer["IsActive"]</label>
                            </div>
                        </div>

                        <!-- Is For First Order Only -->
                        <div class="col-md-6">
                            <div class="form-check">
                                <input  readonly asp-for="IsForFirstOrderOnly" class="form-check-input" />
                                <label asp-for="IsForFirstOrderOnly" class="form-check-label">@Localizer["IsForFirstOrderOnly"]</label>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-success mt-3">@Localizer["Update"]</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}