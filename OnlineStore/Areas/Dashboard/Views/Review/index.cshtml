@using OnlineStore.Models.Dtos.Responses
@model OnlineStore.Models.ViewModels.PagedResult<ReviewDto>
<!--begin::App Content Header-->
<div class="app-content-header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-6">
                <h3 class="mb-0">@Localizer["Reviews"]</h3>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-end">
                    <li class="breadcrumb-item"><a href="#">@Localizer["Home"]</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@Localizer["Reviews"]</li>
                </ol>
            </div>
        </div>
    </div>
</div>
<!--end::App Content Header-->

<!--begin::App Content-->
<div class="app-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex flex-wrap justify-content-between align-items-center">
                            <h3 class="card-title">@Localizer["ListAllReviews"]</h3>
                            <form asp-area="Dashboard" asp-controller="Review" asp-action="Index" method="GET">
                                <input class="form-control d-inline-block w-auto" type="text" name="searchTxt"
                                       placeholder="@Localizer["SearchText"]">
                                <button class="btn btn-success" type="submit">@Localizer["Search"]</button>
                            </form>
                            <a asp-area="Dashboard" asp-controller="Review" asp-action="Create" class="btn btn-success">
                                @Localizer["AddNewReview"]
                            </a>
                        </div>
                    </div>

                    <div class="card-body p-0">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th style="width:10px">#</th>
                                    <th>@Localizer["ProductName"]</th>
                                    <th>@Localizer["Rating"]</th>
                                    <th>@Localizer["Comment"]</th>
                                    <th>@Localizer["Status"]</th>
                                    <th style="width:40px">@Localizer["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int serialNumber = (Model.PageNumber - 1) * Model.PageSize + 1;
                                }
                                @if (Model == null || !Model.Items.Any())
                                {
                                    <tr>
                                        <td colspan="6" class="p-4 text-center">@Localizer["NoRecordsAvailable"]</td>
                                    </tr>
                                }
                                else
                                {
                                    foreach (var review in Model.Items)
                                    {
                                        <tr class="align-middle">
                                            <td>@serialNumber</td>
                                            <td>
                                                @review.ProductName
                                                <img src="@review.ProductImage" width="30" alt="">
                                            </td>
                                            <td>@review.Rating</td>
                                            <td>@review.Comment</td>
                                            <td>@(review.Accepted ? Localizer["Accepted"] : Localizer["Pending"])</td>
                                            <td>
                                                <div class="btn-group">
                                                    <a asp-action="Details" asp-route-id="@review.Id"
                                                       class="btn m-1 rounded btn-info btn-sm"
                                                       title="@Localizer["View"]">
                                                        <i class="bi bi-eye-fill"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@review.Id"
                                                       class="btn m-1 rounded btn-warning btn-sm"
                                                       title="@Localizer["Edit"]">
                                                        <i class="bi bi-check"></i>
                                                    </a>
                                                    <a asp-action="Hide" asp-route-id="@review.Id"
                                                       class="btn m-1 hide-row rounded btn-secondary btn-sm"
                                                       title="@Localizer["Hide"]">
                                                        <i class="bi bi-eye-slash-fill"></i>
                                                    </a>
                                                    <form asp-action="Delete" asp-route-id="@review.Id" method="post"
                                                          class="d-inline">
                                                        <button type="submit"
                                                                class="btn btn-danger rounded m-1 btn-sm"
                                                                title="@Localizer["Delete"]"
                                                                onclick="return confirm('@Localizer["ConfirmDelete"]');">
                                                            <i class="bi bi-trash-fill"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </td>
                                        </tr>
                                        serialNumber++;
                                    }
                                }
                            </tbody>
                        </table>

                        @if (Model?.TotalPages > 1)
                        {
                            <nav class="card-header">
                                <ul class="pagination">
                                    @for (int i = 1; i <= Model?.TotalPages; i++)
                                    {
                                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                                            <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
